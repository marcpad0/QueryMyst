@page
@model QueryMyst.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "New Investigator Access";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow auth-card border-dark">
                <div class="card-header bg-dark text-light py-2">
                    <code class="fs-5">-- Create New Detective Profile</code>
                </div>
                <div class="card-body p-4 bg-light">
                    <div class="text-center mb-4">
                        <span class="auth-icon">🔎</span>
                        <h1 class="h3 code-font text-success">INSERT INTO Detectives</h1>
                        <p class="text-muted"><code>/* Complete the query below to join our investigative team */</code></p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center" role="alert"></div>
                        
                        <div class="sql-statement-container p-3 border border-secondary rounded mb-4">
                            <code class="d-block mb-3">INSERT INTO Detectives (</code>
                            
                            <!-- Username Input -->
                            <div class="form-group mb-3 ps-4">
                                <label class="sql-label mb-1" asp-for="Input.Username"><code>code_name</code></label>
                                <input asp-for="Input.Username" class="form-control sql-input" autocomplete="username" placeholder="Choose a username" />
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>

                            <!-- Email Input -->
                            <div class="form-group mb-3 ps-4">
                                <label class="sql-label mb-1" asp-for="Input.Email"><code>contact_address</code></label>
                                <input asp-for="Input.Email" class="form-control sql-input" autocomplete="email" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Passwords Input -->
                            <div class="row ps-4">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="sql-label mb-1" asp-for="Input.Password"><code>access_key</code></label>
                                        <input asp-for="Input.Password" class="form-control sql-input" autocomplete="new-password" placeholder="password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="sql-label mb-1" asp-for="Input.ConfirmPassword"><code>verify_key</code></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control sql-input" autocomplete="new-password" placeholder="confirm password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <code class="d-block mb-3">);</code>
                        </div>

                        <!-- Terms Acceptance -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="termsCheck" required>
                            <label class="form-check-label" for="termsCheck">
                                <code>-- I acknowledge the <a href="/Terms" class="text-decoration-none">Terms of Service</a> and <a href="/Privacy" class="text-decoration-none">Privacy Policy</a></code>
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-success btn-lg">EXECUTE QUERY</button>
                        </div>

                        <!-- Link to Login -->
                        <p class="text-center">
                            <code>-- Already have detective credentials? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">LOGIN</a></code>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add copy-to-clipboard functionality for SQL code snippets
        document.addEventListener('DOMContentLoaded', function() {
            // Additional JavaScript could be added here if needed
        });
    </script>
}

<style>
    .code-font {
        font-family: 'Consolas', 'Courier New', monospace;
    }
    
    code {
        color: #0d6efd;
    }
    
    .sql-input {
        border-color: #6c757d;
        font-family: 'Consolas', 'Courier New', monospace;
    }
    
    .sql-label {
        display: block;
        font-family: 'Consolas', 'Courier New', monospace;
    }
    
    .sql-statement-container {
        background-color: #f8f9fa;
        font-family: 'Consolas', 'Courier New', monospace;
    }
    
    .auth-icon {
        font-size: 2rem;
    }
</style>