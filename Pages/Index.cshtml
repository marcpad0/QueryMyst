@page
@model IndexModel
@{
    ViewData["Title"] = "QueryMyst - Solve Enigmas with SQL";
}

<div class="hero-section">
    <div class="hero-content">
        <div class="logo-container">
            <span class="logo-icon">🔍</span>
            <h1 class="site-title">QueryMyst</h1>
        </div>
        <p class="tagline">Unravel mysteries with the power of SQL</p>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card main-card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Welcome to the SQL Puzzle Adventure</h2>
                    
                    <div class="row features">
                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">🧩</div>
                                <h3>Solve Puzzles</h3>
                                <p>Face challenging enigmas that can only be solved with the right SQL queries</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">📊</div>
                                <h3>Master SQL</h3>
                                <p>Improve your database skills while having fun with our interactive challenges</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">🏆</div>
                                <h3>Earn Badges</h3>
                                <p>Collect achievements and prove your SQL mastery as you progress</p>
                            </div>
                        </div>
                    </div>

                    <div class="how-it-works mt-5 pt-3">
                        <h2 class="text-center mb-4">How QueryMyst Works</h2>
                        
                        <div class="step-container">
                            <div class="step">
                                <div class="step-number">1</div>
                                <div class="step-content">
                                    <h4>Choose a Mystery</h4>
                                    <p>Select from our collection of enigmas, each with its own database schema and story</p>
                                </div>
                            </div>
                            
                            <div class="step">
                                <div class="step-number">2</div>
                                <div class="step-content">
                                    <h4>Analyze the Clues</h4>
                                    <p>Review the database structure and the mystery description to understand what you need to find</p>
                                </div>
                            </div>
                            
                            <div class="step">
                                <div class="step-number">3</div>
                                <div class="step-content">
                                    <h4>Write SQL Queries</h4>
                                    <p>Use our interactive SQL editor to craft queries that reveal hidden information</p>
                                </div>
                            </div>
                            
                            <div class="step">
                                <div class="step-number">4</div>
                                <div class="step-content">
                                    <h4>Solve the Mystery</h4>
                                    <p>Put together all the pieces you've discovered to solve the ultimate puzzle</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>